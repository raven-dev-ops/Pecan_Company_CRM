# Copy this file to `.env` and adjust as needed.

# --- Django ---
DJANGO_SECRET_KEY=dev-insecure-change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# --- Database (local default: SQLite) ---
# DATABASE_ENGINE=sqlite | mssql (later) | postgres (later)
DATABASE_ENGINE=sqlite

# SQLite: if omitted, defaults to backend/db.sqlite3
SQLITE_PATH=

# --- Azure / legacy integrations (stubbed for now) ---
AZURE_ENABLED=0
LEGACY_ENABLED=0

# --- (later) Azure SQL / SQL Server via mssql-django ---
# MSSQL_NAME=
# MSSQL_HOST=
# MSSQL_PORT=
# MSSQL_USER=
# MSSQL_PASSWORD=
# MSSQL_DRIVER=ODBC Driver 18 for SQL Server